<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rowBackground"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:weightSum="20">

        <TextView
            android:id="@+id/tv_name_type"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="Math"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/img_nav_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_navigation_before" />

        <TextView
            android:id="@+id/tv_num_ques_per_type"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="999/999"
            android:textColor="@color/textColorSecondary" />

        <ImageView
            android:id="@+id/img_nav_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_navigation_next" />


        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>