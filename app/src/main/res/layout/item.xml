<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/background_item_grid"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:background="@drawable/background_item_grid">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_icon_subject"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/txt_name_subject"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_icon_subject"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="3"
                android:text="Những nguyên lý cơ bản của chủ nghĩa Mác - Lênin"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>