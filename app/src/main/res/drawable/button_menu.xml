<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">   <!-- Trạng thái khi nút click -->
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimaryDark" />
            <stroke android:width="1dp" android:color="@color/divider" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>
            <solid android:color="@color/colorPrimary" />            <!-- Thiết lập màu nền cho nút -->
            <stroke android:width="1dp" android:color="@color/divider" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</selector>
